<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    android:layout_weight="1"

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTopBase"
        android:gravity="center_horizontal"
        android:text="@string/Titulo"
        android:textSize="@dimen/tama単oTitulo"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:visibility="visible">

        <EditText
            android:id="@+id/nombreTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nombre Artista"></EditText>

        <EditText
            android:id="@+id/valorTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Valor Entrada"
            android:inputType="number"></EditText>

        <EditText
            android:id="@+id/notaTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Calificacion"
            android:inputType="number"></EditText>
    </LinearLayout>


    <Spinner
        android:id="@+id/idSpinnerGenero"
        android:layout_width="210dp"
        android:layout_height="61dp"
        android:layout_weight="2"
        android:visibility="visible"
        tools:visibility="visible"></Spinner>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="345dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/agregarBTN"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:text="Registrar"
            android:textColor="@color/primary_light"
            android:textSize="@dimen/tama単oTitulo"></Button>

        <Button
            android:id="@+id/limpiarBtn"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:text="Limpiar"
            android:textColor="@color/primary_light"
            android:textSize="@dimen/tama単oTitulo"></Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Conciertos Asistidos"
            android:textSize="@dimen/tama単oTitulo"></TextView>

        <Button
            android:id="@+id/bfecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="bfecha" />

        <TextView
            android:id="@+id/efecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="efecha" />
    </LinearLayout>

    <ListView
    android:id="@+id/eventosLv"
    android:layout_marginTop="@dimen/marginTopBase"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    </ListView>


</LinearLayout>


